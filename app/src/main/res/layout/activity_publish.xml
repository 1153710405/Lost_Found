<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a481.lostfound.PublishActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kind"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:layout_alignTop="@+id/Kind"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:background="@drawable/edit_text"
        android:layout_toEndOf="@+id/textView1"
        android:maxLines="4"
        android:id="@+id/Kind"
        android:inputType="text"
        android:labelFor="@id/Kind"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/publish_sure"
        android:textSize="30sp"
        android:id="@+id/Enter_Publish"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/Time"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:background="@drawable/edit_text"
        android:maxLines="4"
        android:id="@+id/Time"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView1"
        android:layout_alignStart="@+id/Kind" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/Place"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:background="@drawable/edit_text"
        android:maxLines="4"
        android:id="@+id/Place"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/Time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@drawable/edit_text"
        android:minLines="4"
        android:hint="@string/hint1"
        android:id="@+id/Description"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/image_add"
        android:id="@+id/image_add"
        android:layout_below="@+id/Description"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:layout_toEndOf="@id/image_add"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_upload"
        android:text="@string/image_upload"
        android:layout_below="@+id/image_add"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
